<Window x:Class="SimpleImageViewer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="https://github.com/XamlAnimatedGif/XamlAnimatedGif"
        xmlns:converter="clr-namespace:SimpleImageViewer.converters"
        xmlns:local="clr-namespace:SimpleImageViewer"
        mc:Ignorable="d" WindowStyle="None" BorderThickness="0"
        Background="Transparent"
        Foreground="Transparent"
        KeyDown="Window_KeyDown"
        MouseDown="Window_MouseDown"
        MouseDoubleClick="Window_MouseDoubleClick"
        Title="MainWindow" Height="450" Width="800">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Load Directory..." Click="MenuItem_LoadDirectory_Click" />
            <MenuItem Header="Start SlideShow" Click="MenuItem_SlideShow_Click" IsEnabled="{Binding IsSlideShowEnabled}"/>
            <MenuItem Header="Exit" Click="MenuItem_Exit_Click" />
        </ContextMenu>
    </Window.ContextMenu>

    <Window.Resources>
        <converter:BoolToVisibilityConverter x:Key="BoolToVisible" />
    </Window.Resources>
    
    <Grid>
        <Border x:Name="imgbrdr" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1" Visibility="{Binding IsNormalImageVisible,
                                                                                                                                                 Converter={StaticResource BoolToVisible}}">
            <Image x:Name="screenImage" Source="{Binding SelectedImageSource}"
                   Height="{Binding ElementName=imgbrdr, Path=ActualHeight}" RenderOptions.BitmapScalingMode="HighQuality"   />
        </Border>

        <Border x:Name="gifImgBrdr"  HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="Black" BorderThickness="1"  Visibility="{Binding IsGifImageVisible,
                                                                                                                                                      Converter={StaticResource BoolToVisible}}">
            <Image x:Name="gifScreenImage" gif:AnimationBehavior.SourceUri="{Binding SelectedImageFilePath}" 
                   Height="{Binding ElementName=imgbrdr, Path=ActualHeight}" RenderOptions.BitmapScalingMode="HighQuality"
                   gif:AnimationBehavior.RepeatBehavior="Forever"
                   gif:AnimationBehavior.AutoStart="true"/>
        </Border>
    </Grid>
</Window>
